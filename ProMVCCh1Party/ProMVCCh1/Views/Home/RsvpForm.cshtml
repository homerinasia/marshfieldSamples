@model ProMVCCh1.Models.GuestResponse

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/Styles.css" rel="stylesheet" />
    <title>RsvpForm</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary()
        <p>name: @Html.TextBoxFor(x => x.Name)</p>
        <p>email: @Html.TextBoxFor(x => x.Email)</p>
        <p>phone: @Html.TextBoxFor(x => x.Phone)</p>
        <p>
            will you attend?
            @Html.DropDownListFor(x => x.WillAttend, new[]
        {
           new SelectListItem() {Text = "yes", Value=bool.TrueString },
           new SelectListItem() {Text = "nope...", Value=bool.FalseString }
       }, "plz choose an option"  )
        </p>
        <input type="submit" value="Submit RSVP" />
    }
</body>
</html>
